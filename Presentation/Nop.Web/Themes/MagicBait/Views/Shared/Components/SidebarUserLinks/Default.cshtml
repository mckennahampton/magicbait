@model SidebarUserLinksModel
@using System.Text.Encodings.Web
@using Nop.Web.Framework.Infrastructure


@if (Model.IsAuthenticated)
{
    <li class="sidebar-user-link"><a href="@Url.RouteUrl("CustomerInfo")" class="ico-account">@T("Account.MyAccount")@*@Model.CustomerName*@</a></li>
    <li class="sidebar-user-link"><a href="@Url.RouteUrl("Logout")" class="ico-logout">@T("Account.Logout")</a></li>
}
else
{
    <li class="sidebar-user-link"><a href="@Url.RouteUrl("Register")" class="ico-register">@T("Account.Register")</a></li>
    <li class="sidebar-user-link"><a href="@Url.RouteUrl("Login")" class="ico-login">@T("Account.Login")</a></li>
}
@if (Model.AllowPrivateMessages)
{
    <li class="sidebar-user-link">
        <a href="@Url.RouteUrl("PrivateMessages", new { tab = "" })" class="ico-inbox">
            <span class="inbox-label">@T("PrivateMessages.Inbox")</span>
            <span class="inbox-unread">@Model.UnreadPrivateMessages</span>
        </a>
    </li>
}
@if (Model.WishlistEnabled)
{
    <li class="sidebar-user-link">
        <a href="@Url.RouteUrl("Wishlist")" class="ico-wishlist">
            <span class="wishlist-label">@T("Wishlist")</span>
        </a>
    </li>
}
@if (Model.ShoppingCartEnabled)
{
    <li class="sidebar-user-link">
        <a href="@Url.RouteUrl("ShoppingCart")" class="ico-cart">
            <span class="cart-label">@T("ShoppingCart")</span> - <span id="sidebar-price"></span>
        </a>
    </li>
}

