@model IList<ProductOverviewModel>
@if (Model.Count > 0)
{
    <div class="product-grid cross-sells d-flex flex-column m-5">
        <div class="title m-3">
            <strong>@T("ShoppingCart.CrossSells")</strong>
        </div>
        <div class="item-grid d-flex flex-wrap justify-content-around align-items-center">
            @foreach (var product in Model)
            {
                <div class="item-box m-3">
                    @await Html.PartialAsync("_ProductBox", product)
                </div>
            }
        </div>
    </div>
}